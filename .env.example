# ==============================================
# LDesign API Server - 环境变量配置示例
# ==============================================

# 应用配置
APP_NAME="LDesign API Server"
APP_PORT=3000
APP_ENV=development
APP_VERSION=1.0.0

# 数据库配置
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=ldesign
DB_PASSWORD=ldesign123
DB_DATABASE=ldesign_api
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# 限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 邮件配置（用于密码重置等功能）
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM="LDesign API" <noreply@ldesign.com>

# 日志配置
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs

# CORS配置
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Swagger配置
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs

# 安全配置
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRES=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900

# 缓存配置
CACHE_TTL=300
CACHE_MAX=100

# 会话配置
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000

# 健康检查配置
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=health

# 监控配置
MONITORING_ENABLED=false
MONITORING_ENDPOINT=

# 第三方服务配置
# 阿里云OSS（文件存储）
ALIYUN_OSS_ACCESS_KEY_ID=
ALIYUN_OSS_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET=
ALIYUN_OSS_REGION=

# 微信小程序配置
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# 短信服务配置
SMS_ACCESS_KEY_ID=
SMS_ACCESS_KEY_SECRET=
SMS_SIGN_NAME=
SMS_TEMPLATE_CODE=

# ==============================================
# 开发环境特定配置
# ==============================================

# 开发环境数据库（使用Docker）
# DB_HOST=localhost
# DB_PORT=3307
# DB_USERNAME=ldesign_dev
# DB_PASSWORD=ldesign_dev123
# DB_DATABASE=ldesign_api_dev

# 开发环境Redis（使用Docker）
# REDIS_HOST=localhost
# REDIS_PORT=6380

# ==============================================
# 生产环境特定配置
# ==============================================

# 生产环境请务必修改以下配置：
# 1. 更改所有密钥和密码
# 2. 设置正确的数据库连接信息
# 3. 配置邮件服务
# 4. 设置正确的CORS源
# 5. 禁用Swagger（SWAGGER_ENABLED=false）
# 6. 设置适当的日志级别（LOG_LEVEL=warn或error）